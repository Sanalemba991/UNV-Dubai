---
// Import the necessary dependencies
import FooterSocialLink from "~/components/ui/FooterSocialLink.astro";
import EmailFooterInput from "~/components/ui/EmailFooterInput.astro";
import { footerData /* , headerData */ } from "~/navigation";
import { socialLinks } from "~/navigation2";
import Logo from "~/components/Logo.astro";

// Define the variables that will be used in this component
const sectionThreeTitle: string = "Stay up to date";
const sectionThreeContent: string =
  "Stay updated with the latest security tips.";
---
<footer class="w-full bg-neutral-300 dark:bg-neutral-900">
  <div
    class="mx-auto w-full max-w-[85rem] px-4 py-12 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-screen-2xl"
  >
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4 lg:grid-cols-5">
      <div class="col-span-full lg:col-span-1">
        <Logo class="w-32 h-auto" />
      </div>
      <!-- An array of links for Product and Company sections -->
      {
        footerData.links.map((title) => (
          <div class="col-span-1">
            <p class="font-semibold text-xl text-neutral-800 dark:text-neutral-200 mb-4">
              {title.title}
            </p>
            <ul class="mt-3 space-y-3">
              {title.links.map((link, index) => (
                <li>
                  <a
                    href={link.href}
                    class="inline-flex gap-x-2 rounded-lg text-neutral-600 outline-none ring-zinc-500 transition duration-300 hover:text-blue-600 hover:underline hover:underline-offset-4 focus-visible:ring dark:text-neutral-400 dark:ring-zinc-200 dark:hover:text-neutral-300 dark:focus:outline-none dark:focus:ring-1"
                  >
                    {link.text}
                  </a>
                  {title.title === "Company" && index === 2 ? (
                    <span class="ms-1 inline rounded-lg bg-blue-500 px-2 py-1 text-xs font-bold text-neutral-50 hover:bg-blue-600 transition duration-300">
                      We're hiring!
                    </span>
                  ) : null}
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <div class="col-span-2">
        <h3 class="font-semibold text-xl text-neutral-800 dark:text-neutral-200 mb-4">
          {sectionThreeTitle}
        </h3>

        <form class="space-y-4">
          <EmailFooterInput />
          <p class="mt-3 text-lg text-neutral-600 dark:text-neutral-400">
            {sectionThreeContent}
          </p>
        </form>
      </div>
    </div>

    <div class="mt-12 border-t border-neutral-400 dark:border-neutral-700 pt-8 grid gap-y-4 sm:flex sm:items-center sm:justify-between sm:gap-y-0">
      <div class="flex items-center justify-between">
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          Â© <span id="current-year"></span> Digital Link Technology
          <a
            class="font-medium underline underline-offset-2 outline-none ring-zinc-500 transition duration-300 hover:text-neutral-700 hover:decoration-dashed focus:outline-none rounded-lg focus-visible:ring dark:ring-zinc-200 dark:hover:text-neutral-300"
            href="https://digiimpact.ae"
            target="_blank"
            rel="noopener noreferrer">DIGIIMPACT</a
          >.
        </p>
      </div>
      <div class="flex space-x-4">
        <FooterSocialLink url={socialLinks.facebook}>
          <svg
            class="h-5 w-5 flex-shrink-0 fill-current text-neutral-700 dark:text-neutral-400 hover:text-blue-600 dark:hover:text-blue-400 transition duration-300"
            fill="currentColor"
            role="img"
            viewBox="0 0 24 24"
          >
            <title>Facebook</title>
            <path
              d="M9.101 23.691v-7.98H6.627v-3.667h2.474v-1.58c0-4.085 1.848-5.978 5.858-5.978.401 0 .955.042 1.468.103a8.68 8.68 0 0 1 1.141.195v3.325a8.623 8.623 0 0 0-.653-.036 26.805 26.805 0 0 0-.733-.009c-.707 0-1.259.096-1.675.309a1.686 1.686 0 0 0-.679.622c-.258.42-.374.995-.374 1.752v1.297h3.919l-.386 2.103-.287 1.564h-3.246v8.245C19.396 23.238 24 18.179 24 12.044c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.628 3.874 10.35 9.101 11.647Z"
            ></path>
          </svg>
        </FooterSocialLink>
        <FooterSocialLink url={socialLinks.instagram}>
          <svg
            class="h-10 w-5 flex-shrink-0 fill-current text-neutral-700 dark:text-neutral-400 hover:text-pink-600 dark:hover:text-pink-400 transition duration-300"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 448 512"
            role="img"
          >
            <title>Instagram</title>
            <path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9S160.5 370.8 224.1 370.8 339 319.5 339 255.9 287.7 141 224.1 141zm0 186.6c-39.5 0-71.6-32.1-71.6-71.6 0-39.5 32.1-71.6 71.6-71.6 39.5 0 71.6 32.1 71.6 71.6 0 39.5-32.1 71.6-71.6 71.6zm146.4-194.3c0 14.9-12 26.9-26.9 26.9s-26.9-12-26.9-26.9 12-26.9 26.9-26.9 26.9 12 26.9 26.9zm76.1 27.2c-.9-19.6-5.2-37-18.2-50C410.8 86.8 393.4 82.5 373.8 81.6 352.1 80.6 286 80 224 80s-128.1.6-149.8 1.6c-19.6.9-37 5.2-50 18.2-13 13-17.3 30.4-18.2 50C5.6 101.9 5 168 5 230s.6 128.1 1.6 149.8c.9 19.6 5.2 37 18.2 50 13 13 30.4 17.3 50 18.2 21.7 1 87.8 1.6 149.8 1.6s128.1-.6 149.8-1.6c19.6-.9 37-5.2 50-18.2 13-13 17.3-30.4 18.2-50 1-21.7 1.6-87.8 1.6-149.8s-.6-128.1-1.6-149.8zM398.8 388c-3.4 8.7-10.6 15.8-19.3 19.3-13.4 5.4-45.2 4.2-155.5 4.2s-142.1 1.2-155.5-4.2c-8.7-3.4-15.8-10.6-19.3-19.3-5.4-13.4-4.2-45.2-4.2-155.5s-1.2-142.1 4.2-155.5c3.4-8.7 10.6-15.8 19.3-19.3 13.4-5.4 45.2-4.2 155.5-4.2s142.1-1.2 155.5 4.2c8.7 3.4 15.8 10.6 19.3 19.3 5.4 13.4 4.2 45.2 4.2 155.5s1.2 142.1-4.2 155.5z"/>
          </svg>
        </FooterSocialLink>
        
        

        <FooterSocialLink url={socialLinks.google}>
          <svg
            class="h-5 w-5 flex-shrink-0 fill-current text-neutral-700 dark:text-neutral-400 hover:text-red-600 dark:hover:text-red-400 transition duration-300"
            fill="currentColor"
            role="img"
            viewBox="0 0 24 24"
          >
            <title>Google</title>
            <path
              d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"
            ></path>
          </svg>
        </FooterSocialLink>
      </div>
    </div>

    <script>
      const year = new Date().getFullYear();
      const element = document.getElementById("current-year");
      element!.innerText = year.toString();
    </script>
  </div>
</footer>
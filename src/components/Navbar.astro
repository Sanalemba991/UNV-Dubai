    document.addEventListener("DOMContentLoaded", function () {
      const nav = document.getElementById("main-nav");
      const menuToggle = document.getElementById("menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      const navSpacer = document.getElementById("nav-spacer");
      const mainMenu = document.getElementById("main-mobile-menu");
      const productsMenu = document.getElementById("products-mobile-menu");
      const showProductsButton = document.getElementById(
        "show-products-menu-button"
      );
      const backToMainButton = document.getElementById(
        "back-to-main-menu-button"
      );
      const dropdownButton = document.getElementById(
        "mobile-products-dropdown-button"
      );
      const dropdownMenu = document.getElementById("mobile-products-dropdown");
      const dropdownIcon = dropdownButton?.querySelector("svg:last-child");

      let isMenuOpen = false;
      let isProductsMenuOpen = false;
      let baseNavHeight = nav?.offsetHeight || 64;
      let resizeTimeout;
      let touchStartY = 0;

      function calculateMenuHeights() {
        const mainMenuHeight = mainMenu?.scrollHeight || 0;
        const productsMenuHeight = productsMenu?.scrollHeight || 0;
        const dropdownHeight = (dropdownMenu?.scrollHeight || 0) + 45;
        const totalHeight = isProductsMenuOpen
          ? mainMenuHeight + productsMenuHeight + dropdownHeight
          : mainMenuHeight + dropdownHeight;
        return { totalHeight };
      }

      function updateSpacer(height = baseNavHeight) {
        if (navSpacer) {
          navSpacer.style.marginTop = `${height}px`;
        }
      }

      function updateMobileMenuHeight() {
        const { totalHeight } = calculateMenuHeights();
        if (isMenuOpen && mobileMenu) {
          mobileMenu.style.maxHeight = `${totalHeight + 60}px`;
          updateSpacer(baseNavHeight + totalHeight + 60);
        }
      }

      function toggleMainMenu() {
        isMenuOpen = !isMenuOpen;
        menuToggle?.setAttribute("aria-expanded", isMenuOpen.toString());
        mobileMenu?.setAttribute("aria-hidden", (!isMenuOpen).toString());

        if (isMenuOpen) {
          updateMobileMenuHeight();
        } else {
          mobileMenu.style.maxHeight = "0";
          isProductsMenuOpen = false;
          mainMenu?.classList.remove("hidden");
          productsMenu?.classList.add("hidden");
          updateSpacer();
        }
      }

      function openProductsMenu() {
        isProductsMenuOpen = true;
        mainMenu?.classList.add("hidden");
        productsMenu?.classList.remove("hidden");
        updateMobileMenuHeight();
      }

      function closeProductsMenu() {
        isProductsMenuOpen = false;
        productsMenu?.classList.add("hidden");
        mainMenu?.classList.remove("hidden");
        updateMobileMenuHeight();
      }

      function handleDropdownToggle() {
        if (!dropdownButton || !dropdownMenu) return;
        const expanded =
          dropdownButton.getAttribute("aria-expanded") === "true";
        dropdownButton.setAttribute("aria-expanded", (!expanded).toString());
        dropdownMenu.classList.toggle("hidden");
        dropdownMenu.setAttribute("aria-hidden", expanded.toString());
        dropdownIcon?.classList.toggle("rotate-180");
        updateMobileMenuHeight();
      }

      function updateActiveLinks() {
        const currentPath = window.location.pathname;

        document
          .querySelectorAll(".nav-link, .mobile-nav-link")
          .forEach((link) => {
            try {
              const linkUrl = new URL(
                (link as HTMLAnchorElement).href,
                window.location.origin
              );

              const normalize = (path) =>
                path !== "/" ? path.replace(/\/$/, "") : path;

              const normalizedCurrent = normalize(currentPath);
              const normalizedLink = normalize(linkUrl.pathname);

              const isExact = normalizedCurrent === normalizedLink;
              const isChild =
                normalizedLink !== "/" &&
                normalizedCurrent.startsWith(normalizedLink + "/");
              const isSpecial =
                normalizedLink === "/products" &&
                (normalizedCurrent.startsWith("/categories") ||
                  normalizedCurrent.startsWith("/categories/"));

              const isActive = isExact || isChild || isSpecial;

              link.classList.toggle("active", isActive);

              const icon = link.querySelector(".mobile-nav-icon");
              if (icon) {
                icon.classList.toggle("text-blue-600", isActive);
                icon.classList.toggle("dark:text-blue-400", isActive);
              }
            } catch (e) {
              console.error("Error processing link:", e);
            }
          });
      }
      

      // Event Listeners
      menuToggle?.addEventListener("click", toggleMainMenu);
      showProductsButton?.addEventListener("click", openProductsMenu);
      backToMainButton?.addEventListener("click", closeProductsMenu);
      dropdownButton?.addEventListener("click", handleDropdownToggle);

      document
        .querySelectorAll("#mobile-menu a:not(#show-products-menu-button)")
        .forEach((link) => {
          link.addEventListener("click", () => isMenuOpen && toggleMainMenu());
        });

      window.addEventListener("resize", () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          baseNavHeight = nav?.offsetHeight || 64;

          if (window.innerWidth >= 1024) {
            isMenuOpen = false;
            isProductsMenuOpen = false;
            mobileMenu.style.maxHeight = "";
            mainMenu?.classList.remove("hidden");
            productsMenu?.classList.add("hidden");
            menuToggle?.setAttribute("aria-expanded", "false");
            mobileMenu?.setAttribute("aria-hidden", "true");
            updateSpacer();
          } else if (isMenuOpen) {
            updateMobileMenuHeight();
          }
        }, 100);
      });

      if (nav) {
        window.addEventListener("scroll", () => {
          const scrolled = window.scrollY > 10;
          nav.classList.toggle("shadow-lg", scrolled);
          nav.classList.toggle("bg-gray-200", scrolled);
          nav.classList.toggle("dark:bg-gray-900", scrolled);
          nav.classList.toggle("shadow-sm", !scrolled);
          nav.classList.toggle("bg-gray-200/90", !scrolled);
          nav.classList.toggle("dark:bg-gray-900/90", !scrolled);
        });
      }

      document.addEventListener(
        "touchstart",
        (e) => {
          touchStartY = e.touches[0].clientY;
        },
        { passive: true }
      );

      document.addEventListener(
        "touchmove",
        (e) => {
          if (!isMenuOpen) return;
          const deltaY = touchStartY - e.touches[0].clientY;
          if (deltaY < -40) toggleMainMenu();
        },
        { passive: true }
      );

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && isMenuOpen) toggleMainMenu();
      });

      document.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
          setTimeout(updateActiveLinks, 50);
        });
      });

      // Initial setup
      updateActiveLinks();
      updateSpacer();
    });
  </script>

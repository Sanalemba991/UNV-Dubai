---
import { Image } from "astro:assets";
import Logo from "../assets/images/digitallogo.svg";
---

<nav class="bg-gray-200 text-gray-200 shadow-md dark:bg-black dark:text-gray-100">
    <div class="container mx-auto flex justify-between items-center px-6 py-4">
        <!-- Logo -->
        <a href="/" class="flex items-center">
            <Image
                src={Logo}
                alt="Digital Link Technology"
                width={120}
                height={40}
                class="h-10 w-auto"
            />
        </a>

        <!-- Desktop Navigation Links -->
        <div class="hidden md:flex flex-1 justify-center font-sans">
            <ul class="flex space-x-10 text-xl items-center">
                <li>
                    <a
                        href="/"
                        class="text-gray-800 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-500 transition-all duration-300 py-3 px-4 border-b-2 border-transparent hover:border-blue-600"
                    >
                        Home
                    </a>
                </li>
                <li>
                    <a
                        href="/about"
                        class="text-gray-800 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-500 transition-all duration-300 py-3 px-4 border-b-2 border-transparent hover:border-blue-600"
                    >
                        About
                    </a>
                </li>
                <li>
                    <a
                        href="/services"
                        class="text-gray-800 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-500 transition-all duration-300 py-3 px-4 border-b-2 border-transparent hover:border-blue-600"
                    >
                        Services
                    </a>
                </li>
                <li>
                    <a
                        href="/products"
                        class="text-gray-800 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-500 transition-all duration-300 py-3 px-4 border-b-2 border-transparent hover:border-blue-600"
                    >
                        Products
                    </a>
                </li>
                <li>
                    <a
                        href="/blog"
                        class="text-gray-800 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-500 transition-all duration-300 py-3 px-4 border-b-2 border-transparent hover:border-blue-600"
                    >
                        Blogs
                    </a>
                </li>
                <li>
                    <a
                        href="/insights"
                        class="text-gray-800 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-500 transition-all duration-300 py-3 px-4 border-b-2 border-transparent hover:border-blue-600"
                    >
                        Insights
                    </a>
                </li>
            </ul>
        </div>

        <!-- Mobile Menu Toggle Button -->
        <button
            id="menu-toggle"
            class="md:hidden flex flex-col h-12 w-12 rounded justify-center items-center group focus:outline-none"
            aria-label="Toggle navigation"
        >
            <span class="w-6 h-1 bg-gray-800 dark:bg-gray-200 mb-1 transition-all duration-300 group-hover:bg-blue-600 group-focus:bg-blue-600"></span>
            <span class="w-6 h-1 bg-gray-800 dark:bg-gray-200 mb-1 transition-all duration-300 group-hover:bg-blue-600 group-focus:bg-blue-600"></span>
            <span class="w-6 h-1 bg-gray-800 dark:bg-gray-200 mb-1 transition-all duration-300 group-hover:bg-blue-600 group-focus:bg-blue-600"></span>
        </button>
    </div>

    <!-- Mobile Menu -->
    <div 
        id="mobile-menu"
        class="md:hidden bg-gray-200 dark:bg-black overflow-hidden transition-all duration-300 ease-in-out max-h-0"
    >
        <ul class="px-6 py-4 space-y-4">
            <li>
                <a
                    href="/"
                    class="block text-gray-800 dark:text-gray-200 py-2 hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-300"
                >Home</a>
            </li>
            <li>
                <a
                    href="/about"
                    class="block text-gray-800 dark:text-gray-200 py-2 hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-300"
                >About</a>
            </li>
            <li>
                <a
                    href="/services"
                    class="block text-gray-800 dark:text-gray-200 py-2 hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-300"
                >Services</a>
            </li>
            <li>
                <a
                    href="/products"
                    class="block text-gray-800 dark:text-gray-200 py-2 hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-300"
                >Products</a>
            </li>
            <li>
                <a
                    href="/blog"
                    class="block text-gray-800 dark:text-gray-200 py-2 hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-300"
                >Blogs</a>
            </li>
            <li>
                <a
                    href="/insights"
                    class="block text-gray-800 dark:text-gray-200 py-2 hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-300"
                >Insights</a>
            </li>
            <li>
                <a
                    href="/contact"
                    class="block text-gray-800 dark:text-gray-200 py-2 hover:text-blue-600 dark:hover:text-blue-500 transition-colors duration-300"
                >Contact Us</a>
            </li>
        </ul>
    </div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const toggleButton = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');

        toggleButton.addEventListener('click', () => {
            // Toggle between max-h-0 and max-h-screen
            if (mobileMenu.classList.contains('max-h-0')) {
                mobileMenu.classList.remove('max-h-0');
                mobileMenu.classList.add('max-h-screen');
            } else {
                mobileMenu.classList.remove('max-h-screen');
                mobileMenu.classList.add('max-h-0');
            }
        });

        // Close menu when clicking on links
        const mobileLinks = mobileMenu.querySelectorAll('a');
        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.remove('max-h-screen');
                mobileMenu.classList.add('max-h-0');
            });
        });
    });
</script>
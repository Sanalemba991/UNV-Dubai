<!-- Spacer to offset fixed navbar -->
<div class="mt-16 sm:mt-14"></div>

<style>
    .nav-link {
        @apply relative text-gray-800 hover:text-blue-600 dark:text-gray-200 dark:hover:text-blue-400 transition-colors duration-300 py-2 px-3;
    }
    
    /* Modified for consistent font/underline behavior */
    .nav-link-text {
        @apply relative inline-block;
    }
    
    .nav-link-text::after {
        content: '';
        @apply absolute left-0 bottom-0 w-0 h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300;
    }
    
    .nav-link:hover .nav-link-text::after,
    .nav-link.active .nav-link-text::after {
        @apply w-full;
    }
    
    .mobile-nav-link {
        @apply flex items-center px-4 py-3 text-gray-800 dark:text-gray-100 hover:bg-gray-200/50 dark:hover:bg-gray-700/50 rounded-lg transition-all duration-300;
    }
    
    .mobile-nav-icon {
        @apply w-6 h-6 mr-3 text-gray-500 dark:text-gray-400 transition-colors duration-300;
    }
    
    .mobile-nav-link:hover .mobile-nav-icon {
        @apply text-blue-600 dark:text-blue-400;
    }
    
    #mobile-products-chevron {
        @apply text-gray-500 dark:text-gray-400;
    }
    
    #mobile-products-toggle:hover #mobile-products-chevron {
        @apply text-blue-600 dark:text-blue-400;
    }

    /* Fixed dropdown styles */
    .dropdown-menu {
        @apply transition-all duration-300;
        transform: translate(-50%, 10px);
    }

    .group\/dropdown:hover .dropdown-menu {
        @apply opacity-100 visible;
        transform: translate(-50%, 0);
    }

    /* Mobile menu transitions */
    #mobile-menu {
        @apply transition-all duration-500 ease-in-out;
    }

    #mobile-products-menu {
        @apply transition-all duration-300;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const nav = document.getElementById('main-nav');
        const toggleButton = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        
        // Get all the nav links
        const navLinks = document.querySelectorAll('.nav-link');
        
        // Set active link based on current URL
        const currentPath = window.location.pathname;
        navLinks.forEach(link => {
            const href = link.getAttribute('href');
            if (href === currentPath || (href !== '/' && currentPath.startsWith(href))) {
                link.classList.add('active');
            }
        });

        // Toggle mobile menu with improved height calculation
        toggleButton.addEventListener('click', () => {
            const isExpanded = toggleButton.getAttribute('aria-expanded') === 'true';
            toggleButton.setAttribute('aria-expanded', String(!isExpanded));
            
            if (!isExpanded) {
                mobileMenu.setAttribute('aria-hidden', 'false');
                // Calculate the full height of the menu
                mobileMenu.style.display = 'block';
                const height = mobileMenu.scrollHeight;
                mobileMenu.style.display = '';
                // Set the calculated height
                mobileMenu.style.maxHeight = height + 'px';
            } else {
                mobileMenu.setAttribute('aria-hidden', 'true');
                mobileMenu.style.maxHeight = '0';
            }
        });

        // Enhanced mobile products menu toggle
        const mobileProductsToggle = document.getElementById('mobile-products-toggle');
        const mobileProductsMenu = document.getElementById('mobile-products-menu');
        const mobileProductsChevron = document.getElementById('mobile-products-chevron');
        
        if (mobileProductsToggle) {
            mobileProductsToggle.addEventListener('click', (e) => {
                e.preventDefault();
                e.stopPropagation();
                const isExpanded = !mobileProductsMenu.classList.contains('hidden');
                
                if (isExpanded) {
                    // Collapse submenu
                    mobileProductsMenu.classList.add('hidden');
                    mobileProductsChevron.classList.remove('rotate-180');
                } else {
                    // Expand submenu
                    mobileProductsMenu.classList.remove('hidden');
                    mobileProductsChevron.classList.add('rotate-180');
                    
                    // Recalculate parent menu height to accommodate the dropdown
                    setTimeout(() => {
                        mobileMenu.style.maxHeight = mobileMenu.scrollHeight + 'px';
                    }, 10);
                }
            });
        }

        // Fix for desktop dropdown menus
        const dropdownItems = document.querySelectorAll('.group\\/dropdown');
        dropdownItems.forEach(item => {
            // Get the dropdown menu element
            const dropdownMenu = item.querySelector('.dropdown-menu');
            
            // Ensure visibility on hover
            item.addEventListener('mouseenter', () => {
                if (dropdownMenu) {
                    dropdownMenu.classList.add('opacity-100', 'visible');
                    dropdownMenu.classList.remove('opacity-0', 'invisible');
                    dropdownMenu.style.transform = 'translate(-50%, 0)';
                }
            });
            
            // Reset on mouse leave
            item.addEventListener('mouseleave', () => {
                if (dropdownMenu) {
                    dropdownMenu.classList.remove('opacity-100', 'visible');
                    dropdownMenu.classList.add('opacity-0', 'invisible');
                    dropdownMenu.style.transform = 'translate(-50%, 10px)';
                }
            });
        });

        // Close menu when clicking on links
        document.querySelectorAll('#mobile-menu a:not(#mobile-products-menu a)').forEach(link => {
            link.addEventListener('click', () => {
                toggleButton.setAttribute('aria-expanded', 'false');
                mobileMenu.setAttribute('aria-hidden', 'true');
                mobileMenu.style.maxHeight = '0';
            });
        });

        // Add shadow on scroll
        window.addEventListener('scroll', () => {
            if (window.scrollY > 10) {
                nav.classList.add('shadow-lg', 'bg-gray-200', 'dark:bg-gray-900');
                nav.classList.remove('shadow-sm', 'bg-gray-200/90', 'dark:bg-gray-900/90');
            } else {
                nav.classList.remove('shadow-lg', 'bg-gray-200', 'dark:bg-gray-900');
                nav.classList.add('shadow-sm', 'bg-gray-200/90', 'dark:bg-gray-900/90');
            }
        });

        // Handle window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 1024) {
                // Reset mobile menu state on desktop view
                toggleButton.setAttribute('aria-expanded', 'false');
                mobileMenu.setAttribute('aria-hidden', 'true');
                mobileMenu.style.maxHeight = '0';
                mobileProductsMenu.classList.add('hidden');
                mobileProductsChevron.classList.remove('rotate-180');
            }
        });
    });
</script>
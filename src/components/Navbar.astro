                if (link.classList.contains('mobile-nav-link')) {
                    const icon = link.querySelector('.mobile-nav-icon');
                    if (icon) {
                        icon.classList.add('text-blue-600', 'dark:text-blue-400');
                    }
                }
            }
        });


---
interface TitleComponentProps {
  title: string;
}

const { title } = Astro.props as TitleComponentProps;
---

<div class="mt-8 w-full sm:mb-10 md:mb-16 text-center">
    <h2 class="text-balance text-xl  text-neutral-800 dark:text-neutral-200 sm:text-3xl lg:text-4xl font-family: Verdana, sans-serif">
        {title}
    </h2>
</div>
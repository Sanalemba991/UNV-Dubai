const description = "Authorized UNV security camera distributor in Dubai & UAE. Meet our expert team providing top-quality surveillance solutions with professional installation support.";
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);




const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://unvdubai.com/#organization",
      "name": "UNV Dubai",
      "url": "https://unvdubai.com",
      "logo": {
        "@type": "ImageObject",
        "@id": `${Astro.url.origin}/unvdubai.png`,
        "url": `${Astro.url.origin}/unvdubai.png`,
       
        "caption": "UNV Dubai Distributor",
        "inLanguage": "en-US",
        "width": 1000,
        "height": 375
      },
      "sameAs": [
        
        "",
       
      ]
    },
    {
      "@type": "WebSite",
      "@id": "https://unvdubai.com/#website",
      "url": "https://unvdubai.com",
      "name": "UNV Security Cameras Dubai | UNV Dubai",
      "description": description,
      "publisher": {
        "@id": "https://unvdubai.com/#organization"
      },
      "inLanguage": "en-US",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://unvdubai.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    },
    {
      "@type": "WebPage",
      "@id": `${canonicalUrl}#webpage`,
      "url": canonicalUrl.toString(),
      "name": title,
      "description": description,
      "isPartOf": {
        "@id": "https://unvdubai.com/#website"
      },
      "about": {
        "@id": "https://unvdubai.com/#organization"
      },
      "inLanguage": "en-US",
      "breadcrumb": {
        "@id": `${canonicalUrl}#breadcrumb`
      }
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${canonicalUrl}#breadcrumb`,
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://unvdubai.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "About Us",
          "item": canonicalUrl.toString()
        }
      ]
    },
    {
      "@type": "AboutPage",
      "@id": `${canonicalUrl}#aboutpage`,
      "url": canonicalUrl.toString(),
      "name": "About UNV Dubai Distributor - UNV Dubai",
      "description": "Learn about our expert team and company providing UNV security camera solutions in Dubai and across UAE. Authorized distributor with professional installation services.",
      "isPartOf": {
        "@id": `${canonicalUrl}#webpage`
      },
      "inLanguage": "en-US"
    },
    {
      "@type": "Person",
      "@id": "https://unvdubai.com/about/#abdulgafoor",
      "name": "Abdul Gafoor",
      "jobTitle": "CEO & CO-FOUNDER",
      "worksFor": {
        "@id": "https://unvdubai.com/#organization"
      },
      "image": {
        "@type": "ImageObject",
        "url": `${Astro.url.origin}${gafoor.src}`,
        "width": 400,
        "height": 400
      },
      "sameAs": [
        "",

      ]
    },
    {
      "@type": "ItemList",
      "itemListElement": publishedTeamMembers.map((member, index) => ({
        "@type": "ListItem",
        "position": index + 1,
        "item": {
          "@type": "Person",
          "name": member.data.name,

---
import Layout from '../layouts/Layout.astro';
import ContactDigi from '~/components/ContactDigi.astro';

// SEO Metadata
const title = "Authorized UNV Camera Supplier & Distributor in Dubai, Sharjah & UAE | Contact Us";
const description = "Contact Digital Link Technology - Your trusted UNV camera distributor in UAE. Get expert support for CCTV solutions in Dubai, Sharjah & across UAE.";
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Structured Data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": title,
  "description": description,
  "url": canonicalUrl,
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": `${Astro.site}`
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Contact",
        "item": canonicalUrl
      }
    ]
  },
  "mainEntity": {
    "@type": "Organization",
    "name": "Digital Link Technology LLC",
    "url": "https://unvdubai.com",
    "logo": {
      "@type": "ImageObject",
      "url": `${Astro.url.origin}/unvdubai.png`,
      "width": 1000,
      "height": 375
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+97150 9162488",
      "contactType": ["sales", "customer service"],
      "email": "sales1@digitallink.ae", 
      "areaServed": ["AE"],
      "availableLanguage": ["English", "Arabic"],
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "25th St - Naif - Dubai - United Arab Emirates", // Replace
        "addressLocality": "Dubai",
        "addressRegion": "Dubai",
        "postalCode": "123241", 
        "addressCountry": "AE"
      }
    },
    "sameAs": [
      "https://www.facebook.com/yourpage",
      "https://www.linkedin.com/company/yourcompany",
      "https://twitter.com/yourhandle"
    ]
  }
};

// Open Graph Metadata
const openGraph = {
  title: title,
  description: description,
  url: canonicalUrl,
  siteName: "UNV Dubai - Digital Link Technology",
  images: [
    {
      url: `${Astro.url.origin}/images/og-contact.jpg`, // Replace with actual image
      width: 1200,
      height: 630,
      alt: "Contact UNV Authorized Distributor in Dubai"
    }
  ],
  locale: "en_US",
  type: "website"
};

// Twitter Card Metadata
const twitterCard = {
  card: "summary_large_image",
  title: title,
  description: description,
  site: "@YourTwitterHandle", // Replace
  creator: "@YourTwitterHandle", // Replace
  image: `${Astro.url.origin}/images/twitter-contact.jpg` // Replace
};
---

<Layout 
  title={title} 
  description={description} 
  canonicalUrl={canonicalUrl}
  structuredData={structuredData}
  openGraph={openGraph}
  twitterCard={twitterCard}
>
  <main>
    <!-- Ensure your contact component has matching visible contact info -->
    <ContactDigi/>
    
    <!-- Hidden microdata for better SEO -->
    <div itemscope itemtype="https://schema.org/Organization" style="display:none;">
      <span itemprop="name">Digital Link Technology LLC</span>
      <span itemprop="description">Authorized UNV Camera Distributor in UAE</span>
      <div itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
        <span itemprop="streetAddress">25th St - Naif - Dubai - United Arab EmiratesYour Street Address</span>,
        <span itemprop="addressLocality">Dubai</span>,
        <span itemprop="addressRegion">Dubai</span>,
        <span itemprop="postalCode">123241</span>,
        <span itemprop="addressCountry">United Arab Emirates</span>
      </div>
      <span itemprop="telephone">+971-4-123-4567</span>
      <span itemprop="email">info@unvdubai.com</span>
      <span itemprop="url">https://unvdubai.com</span>
    </div>
  </main>
</Layout>
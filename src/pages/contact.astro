---
import Layout from '../layouts/Layout.astro';
import ContactDigi from '~/components/ContactDigi.astro';

// SEO Metadata
const title = "Contact UNV Authorized Distributor in Dubai, UAE | Digital Link Technology";
const description = "Get in touch with Dubai's leading UNV camera supplier. Contact Digital Link Technology for security solutions in Dubai, Sharjah & across UAE. Call +971 XXXX";
const keywords = [
  "UNV Dubai contact",
  "UNV UAE distributor",
  "contact UNV supplier",
  "UNV security solutions Dubai",
  "UNV camera support UAE",
  "Hikvision partner Dubai",
  "security systems contact",
  "UNV technical support UAE"
].join(', ');

const canonicalUrl = "https://unvdubai.com/contact/";

// Enhanced Schema.org Structured Data
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${canonicalUrl}#organization`,
      "name": "Digital Link Technology LLC",
      "url": "https://unvdubai.com",
      "logo": {
        "@type": "ImageObject",
        "url": `${Astro.url.origin}/images/logo.webp`,
        "width": 600,
        "height": 200
      },
      "sameAs": [
        "https://www.facebook.com/unvdubai",
        "https://www.linkedin.com/company/unv-dubai"
      ]
    },
    {
      "@type": "LocalBusiness",
      "@id": `${canonicalUrl}#localbusiness`,
      "name": "Digital Link Technology LLC",
      "image": `${Astro.url.origin}/images/showroom.webp`,
      "priceRange": "$$$",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "25th St - Naif",
        "addressLocality": "Dubai",
        "addressRegion": "UAE",
        "postalCode": "12345",
        "addressCountry": "United Arab Emirates"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "25.2697",
        "longitude": "55.3095"
      },
      "telephone": "+971-4-1234567",
      "openingHours": "Mo-Fr 08:00-18:00",
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "18:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "09:00",
          "closes": "14:00"
        }
      ]
    },
    {
      "@type": "WebPage",
      "@id": `${canonicalUrl}#webpage`,
      "url": canonicalUrl,
      "name": title,
      "description": description,
      "isPartOf": {
        "@id": "https://unvdubai.com/#website"
      },
      "about": {
        "@id": `${canonicalUrl}#localbusiness`
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://unvdubai.com/"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Contact",
            "item": canonicalUrl
          }
        ]
      }
    },
    {
      "@type": "ContactPage",
      "@id": `${canonicalUrl}#contactpage`,
      "url": canonicalUrl,
      "name": "Contact UNV Security Experts",
      "description": "Contact our team for UNV product inquiries, technical support, and professional security system consultations in Dubai and UAE.",
      "potentialAction": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "telephone": "+971-4-1234567",
        "email": "info@unvdubai.com",
        "contactOption": "TollFree",
        "areaServed": "AE",
        "availableLanguage": ["English", "Arabic"]
      }
    }
  ]
};
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
  canonicalUrl={canonicalUrl}
  structuredData={structuredData}
  ogImage={`${Astro.url.origin}/images/contact-preview.webp`}
  ogType="website"
  twitterCard="summary_large_image"
>
  <main>
    <ContactDigi client:load />
  </main>
</Layout>
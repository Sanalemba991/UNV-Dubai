---
import Hero from "~/components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Slider from "~/components/Slider";
import FeaturesNavs from "../components/features/FeaturesNavs.astro";
import TestimonialsSection from "~/components/TestimonialsSection.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import TitleComponents from "~/components/TitleComponents.astro";
import FeatureComponents from "~/components/FeatureComponents.astro";
import Sections from "~/components/Sections.astro";
import Unvdigi from "~/components/Unvdigi.astro";
import Whatsapp from "~/components/Whatsapp";
import Feature from "~/components/features/Feature.astro";

// SEO Meta Configuration
const title: string = "UNV Authorized Distributor in Dubai, UAE | UNV Dubai";
const description: string = "Premier UNV Distributor in Dubai, UAE offering security cameras, NVRs, video surveillance systems. Authorized UNV partner with expert support & installation services.";


const testimonials: CollectionEntry<"testimonials">[] = (
  await getCollection("testimonials")
).sort(
  (a: CollectionEntry<"testimonials">, b: CollectionEntry<"testimonials">) =>
    a.data.id - b.data.id
);

const structuredData = {
 "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://unvdubai.com/#organization",
      "name": "UNV Dubai",
      "url": "https://unvdubai.com",
      "logo": {
        "@type": "ImageObject",
        "@id": `${Astro.url.origin}/unvdubai.png`,
        "url": `${Astro.url.origin}/unvdubai.png`,
  
        "caption": "unvdubai",
        "inLanguage": "en-US",
        "width": 1000,
        "height": 375
      }
    },
    {
      "@type": "WebSite",
      "@id": "https://unvdubai.com/#website",
      "url": "https://unvdubai.com",
      "name": "UNV Dubai | Authorized Distributor in UAE ",
      "publisher": {
        "@id": "https://unvdubai.com/#organization"
      },
      "inLanguage": "en-US",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://unvdubai.com/?s={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    },
    {
      "@type": "ImageObject",
      "@id": `${Astro.url.origin}/unvdubai.png`,
      "url": `${Astro.url.origin}/unvdubai.png`,
      "width": 200,
      "height": 200,
      "inLanguage": "en-US"
    },
    {
      "@type": "WebPage",
      "@id": "https://unvdubai.com/#webpage",
      "url": "https://unvdubai.com/",
      "name": "UNV Authorized Distributor in Dubai, UAE | Security Solutions ",
      "description": description,
      "datePublished": "2023-05-05T12:19:39+01:00",
      "dateModified": "2024-11-25T11:05:33+00:00",
      "about": {
        "@id": "https://unvdubai.com/#organization"
      },
      "isPartOf": {
        "@id": "https://unvdubai.com/#website"
      },
      "primaryImageOfPage": {
        "@id": `${Astro.url.origin}/unvdubai.png`,
      },
      "inLanguage": "en-US"
    },
    {
      "@type": "Article",
      "headline": "UNV Security Solutions in Dubai - Authorized Distributor",
      "datePublished": "2023-05-05T12:19:39+01:00",
      "dateModified": "2024-11-25T11:05:33+00:00",
      "publisher": {
        "@id": "https://unvdubai.com/#organization"
      },
      "description": description,
      "name": title,
      "@id": "https://unvdubai.com/#richSnippet",
      "isPartOf": {
        "@id": "https://unvdubai.com/#webpage"
      },
      "inLanguage": "en-US",
      "mainEntityOfPage": {
        "@id": "https://unvdubai.com/#webpage"
      },
      "author": {
        "@type": "Organization",
        "name": "UNV Dubai"
      },
      "image": {
        "@type": "ImageObject",
        "url":  `${Astro.url.origin}/unvdubai.png`,
        "width": 1200,
        "height": 630,
        "caption": "UNV Dubai Authorized Distributor"
      },
      "speakable": {
        "@type": "SpeakableSpecification",
        "cssSelector": [".hero", ".testimonials"]
      }
    }
  ]
};
---

<Layout 
  title={title} 
  description={description} 
  structuredData={structuredData}
  canonicalUrl={Astro.url.href}
  ogTitle={title}
  ogDescription={description}
  ogImage={`${Astro.url.origin}/unvdubai.png`}
  ogUrl={Astro.url.href}
  twitterCard="summary_large_image"
>
<Unvdigi/> 
<Sections>
<Hero/>
<Feature/>
<TitleComponents title="Why UNV Dubai Technology?" />
<FeatureComponents/>
<TestimonialsSection
    title="What Our Customers Say?"
    testimonials={testimonials}
  />
<TitleComponents title="Award and Recognitions" />
<Slider client:visible />
<Whatsapp client:load />
</Sections>
</Layout>
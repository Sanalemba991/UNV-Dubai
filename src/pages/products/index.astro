---
import Layout from "~/layouts/Layout.astro";
import { getCollection } from "astro:content";
import image1 from "/src/assets/images/camip.jpg";

const products = [
  {
    id: 1,
    title: "Laptop Model 1",
    description:
      "Laptop Model 1 is a lightweight, powerful computer designed for professionals on the go. Featuring the latest technology and impressive battery life.",
    image: image1,
    link: "/laptop",
    category: "laptop",
  },
  {
    id: 2,
    title: "Digital Link Technology",
    description:
      "Welcome to Digital Link Technology - our advanced networking solution that provides seamless connectivity and enhanced security for your business.",
    image: image1,
    link: "/network",
    category: "network",
  },
];

// Group products by category
const laptops = products.filter((product) => product.category === "laptop");
const networkSolutions = products.filter(
  (product) => product.category === "network",
);
---

<Layout>
  <main class="max-w-6xl mx-auto px-4 py-8">
    <h1
      class="text-3xl md:text-4xl lg:text-5xl text-center my-8 relative overflow-hidden"
    >
      <span
        class="inline-block transform transition-transform duration-700 animate-slideIn"
        >Our Products</span
      >
    </h1>

    <!-- Sections Container - Row Layout -->
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Laptops Section -->
      <section class="w-full lg:w-1/2">
        <h2 class="text-2xl md:text-3xl lg:text-4xl text-center mb-10 relative">
          <span
            class="inline-block relative pb-2 after:content-[''] after:absolute after:bottom-0 after:left-1/4 after:right-1/4 after:h-1 after:bg-blue-600 after:rounded-full"
            >Laptops</span
          >
        </h2>

       <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-6">
  {
    laptops.map((product, index) => (
      <div
        class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transform transition-all duration-300 hover:-translate-y-2 product-card"
        style={`animation-delay: ${index * 150}ms`}
      >
        <div class="overflow-hidden">
          <img
            src={product.image.src}
            alt={product.title}
            class="w-full h-48 sm:h-56 object-cover transform transition-transform duration-700 hover:scale-110"
          />
        </div>
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-3">
            {product.title}
          </h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            {product.description}
          </p>
          <div class="flex justify-center">
            <a
              href={product.link}
              class="inline-block py-2 px-6 bg-blue-600 text-white rounded-lg text-center font-medium hover:bg-blue-700 transition-all duration-200 transform hover:scale-105"
            >
              More
            </a>
          </div>
        </div>
      </div>
    ))
  }
</div>
      </section>

      <!-- Network Solutions Section -->
      <section class="w-full lg:w-1/2">
        <h2 class="text-2xl md:text-3xl lg:text-4xl text-center mb-10 relative">
          <span
            class="inline-block relative pb-2 after:content-[''] after:absolute after:bottom-0 after:left-1/4 after:right-1/4 after:h-1 after:bg-blue-600 after:rounded-full"
            >Network Solutions</span
          >
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-6">
          {
            networkSolutions.map((product, index) => (
              <div
                class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transform transition-all duration-300 hover:-translate-y-2 product-card"
                style={`animation-delay: ${index * 150}ms`}
              >
                <div class="overflow-hidden">
                  <img
                    src={product.image.src}
                    alt={product.title}
                    class="w-full h-48 sm:h-56 object-cover transform transition-transform duration-700 hover:scale-110"
                  />
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-800 mb-3">
                    {product.title}
                  </h3>
                  <p class="text-gray-600 mb-6 leading-relaxed">
                    {product.description}
                  </p>
                  <div class="flex justify-center">
                    <a
                      href={product.link}
                      class="inline-block py-2 px-6 bg-blue-600 text-white rounded-lg text-center font-medium hover:bg-blue-700 transition-all duration-200 transform hover:scale-105"
                    >
                      More
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  @keyframes slideIn {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .animate-slideIn {
    animation: slideIn 0.8s ease-out forwards;
  }

  .product-card {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>

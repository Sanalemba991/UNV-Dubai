---
import Layout from "~/layouts/Layout.astro";
import { getCollection } from "astro:content";
import image1 from "/src/assets/images/camip.jpg";

const products = [
  {
    id: 1,
    title: "Laptop Model 1",
    description:
      "Laptop Model 1 is a lightweight, powerful computer designed for professionals on the go. Featuring the latest technology and impressive battery life.",
    image: image1,
    link: "/laptop",
    category: "laptop",
  },
  {
    id: 2,
    title: "Digital Link Technology",
    description:
      "Welcome to Digital Link Technology - our advanced networking solution that provides seamless connectivity and enhanced security for your business.",
    image: image1,
    link: "/network",
    category: "network",
  },
];

// Group products by category
const laptops = products.filter((product) => product.category === "laptop");
const networkSolutions = products.filter(
  (product) => product.category === "network",
);
---

<Layout>
  <main class="max-w-6xl mx-auto px-4 py-8">
    <h1
      class="text-3xl md:text-4xl lg:text-5xl text-center my-8 relative overflow-hidden"
    >
      <span
        class=""
        >Our Products</span
      >
    </h1>

    <!-- Sections Container - Row Layout -->
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Laptops Section -->
      <section class="w-full lg:w-1/2">
        <h2 class="text-2xl md:text-3xl lg:text-4xl text-center mb-10 relative">
          <span
            class="inline-block relative pb-2 after:content-[''] after:absolute after:bottom-0 after:left-1/4 after:right-1/4 after:h-1 after:bg-blue-600 after:rounded-full"
            >Laptops</span
          >
        </h2>

       <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-6">
  {
    laptops.map((product, index) => (
      <div
        class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transform transition-all duration-300 hover:-translate-y-2 product-card"
        style={`animation-delay: ${index * 150}ms`}
      >
        <div class="overflow-hidden">
          <img
            src={product.image.src}
            alt={product.title}
            class="w-full h-48 sm:h-56 object-cover transform transition-transform duration-700 hover:scale-110"
          />
        </div>
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-3">
            {product.title}
          </h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            {product.description}
          </p>
          <div class="flex justify-between items-center mt-6">
                  <a
                     href={product.link}
                    class="inline-flex items-center px-5 py-2.5 rounded-lg bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-medium text-sm hover:from-blue-600 hover:to-indigo-700 transition duration-300 shadow-md hover:shadow-xl transform hover:-translate-y-1"
                  >
                  View More
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </a>

                  <button class="p-2 rounded-full text-gray-400 hover:text-blue-600 hover:bg-blue-50 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
                    </svg>
                  </button>
                </div>
              </div>
        </div>
    
    ))
  }
</div>
      </section>

      <!-- Network Solutions Section -->
      <section class="w-full lg:w-1/2">
        <h2 class="text-2xl md:text-3xl lg:text-4xl text-center mb-10 relative">
          <span
            class="inline-block relative pb-2 after:content-[''] after:absolute after:bottom-0 after:left-1/4 after:right-1/4 after:h-1 after:bg-blue-600 after:rounded-full"
            >Network Solutions</span
          >
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-6">
          {
            networkSolutions.map((product, index) => (
              <div
                class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transform transition-all duration-300 hover:-translate-y-2 product-card"
                style={`animation-delay: ${index * 150}ms`}
              >
                <div class="overflow-hidden">
                  <img
                    src={product.image.src}
                    alt={product.title}
                    class="w-full h-48 sm:h-56 object-cover transform transition-transform duration-700 hover:scale-110"
                  />
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-800 mb-3">
                    {product.title}
                  </h3>
                  <p class="text-gray-600 mb-6 leading-relaxed">
                    {product.description}
                  </p>
                  <div class="flex justify-between items-center mt-6">
                  <a
                     href={product.link}
                    class="inline-flex items-center px-5 py-2.5 rounded-lg bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-medium text-sm hover:from-blue-600 hover:to-indigo-700 transition duration-300 shadow-md hover:shadow-xl transform hover:-translate-y-1"
                  >
                  View More
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </a>

                  <button class="p-2 rounded-full text-gray-400 hover:text-blue-600 hover:bg-blue-50 transition duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
                    </svg>
                  </button>
                </div>
              </div>
        </div>
             
            
            ))
          }
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  @keyframes slideIn {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .animate-slideIn {
    animation: slideIn 0.8s ease-out forwards;
  }

  .product-card {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>

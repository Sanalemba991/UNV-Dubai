---
import Layout from "~/layouts/Layout.astro";
import { getCollection } from "astro:content";
import image1 from "/src/assets/images/camip.jpg";

const product = [
  {
    id: 1,
    title: "Laptop Model 1",
    description:
      "Laptop Model 1 is a lightweight",
    image: image1,
    link: "/laptop",
  },
  {
    id: 2,
    title: "Digital Link Technology",
    description:
      "Welcome to Digital Link Technology",
    image: image1,
    link: "/network",
  },
];
---

<Layout>
  <h1 class="text-3xl font-bold text-center my-8">Our Products</h1>

  <!-- Laptops Section -->
  <h2 class="text-2xl font-semibold text-center mb-6">Laptops</h2>
  <div class="flex justify-center gap-8 mt-8 flex-wrap">
    {
      product.map((product) => (
        <div class="max-w-xs w-full bg-white shadow-lg rounded-lg overflow-hidden hover:scale-105 transform transition-all duration-300">
          <img
            src={product.image.src}
            alt={product.title}
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-700 mb-4">
              {product.title}
            </h3>
            <p class="text-sm text-gray-600 mb-4">
              {product.description}
            </p>
            <a
              href={product.link}
              class="w-full py-2 bg-blue-600 text-white rounded-lg text-center block hover:bg-blue-700 transition-colors duration-200"
            >
              Explore
            </a>
          </div>
        </div>
      ))
    }
  </div>

  <!-- Network Solutions Section -->
</Layout>